<div id="artist-list-page">
  <div class="artist-list-container">
    {{#each albumList}}
    <div class="artist-container">
      <img src="{{images.0.url}}" onerror="this.src='/images/download.jpeg';" alt="{{ name }} image">
      <p>{{ name }}</p>
      <a href="/tracks/{{id}}">View Tracks</a>
    </div>
    {{/each}}
  </div>
</div>